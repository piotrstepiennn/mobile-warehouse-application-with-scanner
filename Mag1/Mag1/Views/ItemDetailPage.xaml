<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Mag1.Views.ItemDetailPage"
             Title="{Binding Title}">
    <StackLayout Spacing="20" Padding="15">
        <Label Text="Nazwa:" FontSize="Medium" />
        <Label Text="{Binding Item.Name}" FontSize="Small"/>
        <Label Text="Kod kreskowy:" FontSize="Medium" />
        <Label Text="{Binding Item.Kod}" FontSize="Small"/>
        <Label Text="Stan magazynowy:" FontSize="Medium" />
        <Label Text="{Binding Item.Pieces}" FontSize="Small"/>
    </StackLayout>
</ContentPage>